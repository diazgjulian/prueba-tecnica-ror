<div id="pager">
  <div>
    <% if pagy.prev %>
      <%= link_to(
        "< Anterior",
        search_turbo_frame_submit_path(page: pagy.prev),
        class: "pagination-button",
        data: {
          turbo_action: "advance"
        }
      ) %>
    <% end %>
  </div>
  <div class="text-right">
    <% if pagy.next %>
      <%= link_to(
        "Siguiente >",
        search_turbo_frame_submit_path(page: pagy.next),
        class: "pagination-button",
        data: {
          turbo_action: "advance"
        }
      ) %>
    <% end %>
  </div>
</div>